{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src", // dir of source files
    "outDir": "./dist", // distributable folder

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "nodenext", // 
    "target": "es5", // javascript version the ts compiler is gonna generate
    "types": [],
    // For nodejs:
    // "lib": ["esnext"],
    // "types": ["node"],
    // and npm install -D @types/node

    // Other Outputs
    "sourceMap": true, // a file that specifies how each ts line map to the js line code, it's for machines
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style Options
    "noImplicitReturns": true, // strict
    // "noImplicitOverride": true,
    // "noUnusedLocals": false, // strict
    // "noUnusedParameters": false, // strict
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,
	// "strictNullChecks": false, // strict, true by default
	
    // Recommended Options
    "strict": true,
	// "noImplicitAny": false, // no error on arg with implicit any

    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

	// me
	"removeComments": true
  }
}
